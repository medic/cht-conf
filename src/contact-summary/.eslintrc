{
  "env": {
    "es2022": true,
    "node": true
  },
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2022
  },
  "extends": "eslint:recommended",
  "rules": {
    "eqeqeq": "error",
    "no-bitwise": "error",
    "no-console": "off",
    "no-debugger": "off",
    "no-buffer-constructor": "error",
    "no-caller": "error",
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true,
        "avoidEscape": true
      }
    ]
  },
  "globals": {
    "contact": true,
    "reports": true,
    "lineage": true,
    "uhcStats": true,
    "targetDoc": true,
    "cht": true
  }
}
