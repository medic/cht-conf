<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:odk="http://www.opendatakit.org/xforms">
  <h:head>
    <h:title>Add Person</h:title>
    <model odk:xforms-version="1.0.0">
      <instance>
        <data id="person" version="2017-08-16 00:00:00" prefix="J1!person!" delimiter="#">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <user>
              <facility_id/>
            </user>
          </inputs>
          <person>
            <type>person</type>
            <parent>PARENT</parent>
            <name/>
            <external_id/>
            <nationality/>
            <nationality_other/>
            <contact_telephone_number/>
            <date_of_birth/>
            <sex/>
            <geolocation/>
          </person>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </data>
      </instance>
      <instance id="nationality">
        <root>
          <item>
            <name>kenyan</name>
            <label>Kenyan</label>
          </item>
          <item>
            <name>ugandan</name>
            <label>Ugandan</label>
          </item>
          <item>
            <name>rwandese</name>
            <label>Rwandese</label>
          </item>
          <item>
            <name>tanzanian</name>
            <label>Tanzanian</label>
          </item>
          <item>
            <name>burundian</name>
            <label>Burundian</label>
          </item>
          <item>
            <name>congolese</name>
            <label>Congolese</label>
          </item>
          <item>
            <name>other</name>
            <label>Other</label>
          </item>
        </root>
      </instance>
      <instance id="male_female">
        <root>
          <item>
            <name>male</name>
            <label>Male</label>
          </item>
          <item>
            <name>female</name>
            <label>Female</label>
          </item>
        </root>
      </instance>
      <bind nodeset="/data/inputs" relevant="0"/>
      <bind nodeset="/data/inputs/user/facility_id" type="string"/>
      <bind nodeset="/data/person/type" type="string"/>
      <bind nodeset="/data/person/parent" type="string"/>
      <bind nodeset="/data/person/name" type="string" required="true()"/>
      <bind nodeset="/data/person/external_id" type="string" required="false()"/>
      <bind nodeset="/data/person/nationality" type="string" required="true()"/>
      <bind nodeset="/data/person/nationality_other" type="string" relevant="selected( /data/person/nationality , 'other')"/>
      <bind nodeset="/data/person/contact_telephone_number" type="string"/>
      <bind nodeset="/data/person/date_of_birth" type="date" required="true()"/>
      <bind nodeset="/data/person/sex" type="string" required="true()"/>
      <bind nodeset="/data/person/geolocation" type="string" calculate="concat(../../inputs/meta/location/lat, concat(' ', ../../inputs/meta/location/long))"/>
      <bind nodeset="/data/meta/instanceID" type="string" readonly="true()" jr:preload="uid"/>
    </model>
  </h:head>
  <h:body>
    <group ref="/data/inputs">
      <group ref="/data/inputs/user">
        <label>User</label>
        <input ref="/data/inputs/user/facility_id">
          <label>Facility ID for the parent user</label>
        </input>
      </group>
    </group>
    <group ref="/data/person">
      <label>Person</label>
      <input ref="/data/person/type" appearance="hidden">
        <label>Person Type</label>
        <hint>mandatory</hint>
      </input>
      <input ref="/data/person/parent" appearance="hidden">
        <label>Parent</label>
        <hint>mandatory</hint>
      </input>
      <input ref="/data/person/name">
        <label>Names</label>
      </input>
      <input ref="/data/person/external_id">
        <label>New Client's Unique Code</label>
      </input>
      <select1 ref="/data/person/nationality" appearance="minimal">
        <label>Nationality</label>
        <itemset nodeset="instance('nationality')/root/item">
          <value ref="name"/>
          <label ref="label"/>
        </itemset>
      </select1>
      <input ref="/data/person/nationality_other">
        <label>Specify other</label>
      </input>
      <input ref="/data/person/contact_telephone_number">
        <label>Contact Telephone Number</label>
      </input>
      <input ref="/data/person/date_of_birth">
        <label>Date of Birth</label>
      </input>
      <select1 ref="/data/person/sex" appearance="horizontal-compact">
        <label>Sex</label>
        <itemset nodeset="instance('male_female')/root/item">
          <value ref="name"/>
          <label ref="label"/>
        </itemset>
      </select1>
    </group>
  </h:body>
</h:html>
