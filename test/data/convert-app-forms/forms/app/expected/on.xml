<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:odk="http://www.opendatakit.org/xforms">
  <h:head>
    <h:title>Turn Notifications ON</h:title>
    <model odk:xforms-version="1.0.0">
      <instance>
        <data id="on" version="2016-12-21" prefix="J1!on!" delimiter="#">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <source_id/>
            <contact>
              <_id/>
              <patient_id/>
              <name/>
              <date_of_birth/>
              <sex/>
              <parent>
                <contact>
                  <phone/>
                  <name/>
                </contact>
              </parent>
            </contact>
          </inputs>
          <patient_uuid/>
          <patient_id/>
          <patient_name/>
          <chw_name/>
          <chw_phone/>
          <chw_sms/>
          <group_note>
            <pregnancy_note/>
            <send_note/>
            <chw_note/>
          </group_note>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </data>
      </instance>
      <instance id="contact-summary"/>
      <instance id="user-contact-summary"/>
      <instance id="select_yes_no">
        <root>
          <item>
            <name>yes</name>
            <label>Yes</label>
          </item>
          <item>
            <name>no</name>
            <label>No</label>
          </item>
        </root>
      </instance>
      <instance id="select_risk_factors">
        <root>
          <item>
            <name>r1</name>
            <label>First pregnancy</label>
          </item>
          <item>
            <name>r2</name>
            <label>More than 4 children</label>
          </item>
          <item>
            <name>r3</name>
            <label>Last baby born less than 1 year before</label>
          </item>
          <item>
            <name>r4</name>
            <label>Had previous miscarriages or previous difficulties in childbirth</label>
          </item>
          <item>
            <name>r5</name>
            <label>Has any of the following conditions: 
heart conditions, asthma, high blood pressure, known diabetes</label>
          </item>
          <item>
            <name>r6</name>
            <label>HIV positive</label>
          </item>
        </root>
      </instance>
      <instance id="select_danger_signs">
        <root>
          <item>
            <name>d1</name>
            <label>Pain or cramping in abdomen</label>
          </item>
          <item>
            <name>d2</name>
            <label>Bleeding or fluid leaking from vagina or vaginal discharge with bad odour</label>
          </item>
          <item>
            <name>d3</name>
            <label>Severe nausea or vomiting</label>
          </item>
          <item>
            <name>d4</name>
            <label>Fever of 38 degrees or higher</label>
          </item>
          <item>
            <name>d5</name>
            <label>Severe headache or new, blurry vision problems</label>
          </item>
          <item>
            <name>d6</name>
            <label>Sudden weight gain or severe swelling of feet, ankles, face, or hands</label>
          </item>
          <item>
            <name>d7</name>
            <label>Less movement and kicking from the baby</label>
          </item>
          <item>
            <name>d8</name>
            <label>Blood in the urine or painful, burning urination</label>
          </item>
          <item>
            <name>d9</name>
            <label>Diarrhea that doesn't go away</label>
          </item>
        </root>
      </instance>
      <instance id="select_lmp_approx">
        <root>
          <item>
            <name>61</name>
            <label>up to 2 months ago</label>
          </item>
          <item>
            <name>91</name>
            <label>up to 3 months ago</label>
          </item>
          <item>
            <name>122</name>
            <label>up to 4 months ago</label>
          </item>
          <item>
            <name>183</name>
            <label>beween 5 to 6 months ago</label>
          </item>
          <item>
            <name>244</name>
            <label>beween 7 to 8 months ago</label>
          </item>
        </root>
      </instance>
      <instance id="select_lmp_method">
        <root>
          <item>
            <name>calendar</name>
            <label>Yes</label>
          </item>
          <item>
            <name>approx</name>
            <label>No</label>
          </item>
        </root>
      </instance>
      <instance id="select_iron_follate_sold">
        <root>
          <item>
            <name>iron_follate_sold</name>
            <label>Iron folate sold</label>
          </item>
          <item>
            <name>pregnancy_essentials_kit</name>
            <label>Pregnancy essentials kit sold</label>
          </item>
          <item>
            <name>no_sale</name>
            <label>No sale</label>
          </item>
        </root>
      </instance>
      <instance id="select_albendazole_sold">
        <root>
          <item>
            <name>albendazole_sold</name>
            <label>Albendazole sold</label>
          </item>
          <item>
            <name>pregnancy_essentials_kit</name>
            <label>Pregnancy essentials kit sold</label>
          </item>
          <item>
            <name>no_sale</name>
            <label>No sale</label>
          </item>
        </root>
      </instance>
      <instance id="select_fansidar_sold">
        <root>
          <item>
            <name>fansidar_sold</name>
            <label>Fansidar sold</label>
          </item>
          <item>
            <name>pregnancy_essentials_kit</name>
            <label>Pregnancy essentials kit sold</label>
          </item>
          <item>
            <name>no_sale</name>
            <label>No sale</label>
          </item>
        </root>
      </instance>
      <bind nodeset="/data/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/data/inputs/source" type="string"/>
      <bind nodeset="/data/inputs/source_id" type="string"/>
      <bind nodeset="/data/inputs/contact/_id" type="db:person"/>
      <bind nodeset="/data/inputs/contact/patient_id" type="string"/>
      <bind nodeset="/data/inputs/contact/name" type="string"/>
      <bind nodeset="/data/inputs/contact/date_of_birth" type="string"/>
      <bind nodeset="/data/inputs/contact/sex" type="string"/>
      <bind nodeset="/data/inputs/contact/parent/contact/phone" type="string"/>
      <bind nodeset="/data/inputs/contact/parent/contact/name" type="string"/>
      <bind nodeset="/data/patient_uuid" type="string" calculate="../inputs/contact/_id"/>
      <bind nodeset="/data/patient_id" type="string" calculate="../inputs/contact/patient_id"/>
      <bind nodeset="/data/patient_name" type="string" calculate="../inputs/contact/name"/>
      <bind nodeset="/data/chw_name" type="string" calculate="../inputs/contact/parent/contact/name"/>
      <bind nodeset="/data/chw_phone" type="string" calculate="../inputs/contact/parent/contact/phone"/>
      <bind nodeset="/data/chw_sms" type="string" calculate=" /data/group_note/chw_note "/>
      <bind nodeset="/data/group_note/pregnancy_note" readonly="true()" type="string"/>
      <bind nodeset="/data/group_note/send_note" type="string" required="true()"/>
      <bind nodeset="/data/group_note/chw_note" type="string" relevant=" /data/group_note/send_note  = 'yes'"/>
      <bind nodeset="/data/meta/instanceID" type="string" readonly="true()" jr:preload="uid"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/data/inputs">
      <label>Patient</label>
      <input ref="/data/inputs/source" appearance="hidden">
        <label>Source</label>
      </input>
      <input ref="/data/inputs/source_id" appearance="hidden">
        <label>Source ID</label>
      </input>
      <group ref="/data/inputs/contact">
        <input ref="/data/inputs/contact/_id" appearance="db-object">
          <label>What is the patient's name?</label>
          <hint>Select a person from list</hint>
        </input>
        <input ref="/data/inputs/contact/patient_id" appearance="hidden">
          <label>Patient ID</label>
        </input>
        <input ref="/data/inputs/contact/name" appearance="hidden">
          <label>Name</label>
        </input>
        <input ref="/data/inputs/contact/date_of_birth" appearance="hidden">
          <label>Date of Birth</label>
        </input>
        <input ref="/data/inputs/contact/sex" appearance="hidden">
          <label>Sex</label>
        </input>
        <group ref="/data/inputs/contact/parent">
          <group ref="/data/inputs/contact/parent/contact">
            <input ref="/data/inputs/contact/parent/contact/phone" appearance="hidden">
              <label>CHW Phone</label>
            </input>
            <input ref="/data/inputs/contact/parent/contact/name" appearance="hidden">
              <label>CHW Name</label>
            </input>
          </group>
        </group>
      </group>
    </group>
    <group appearance="field-list" ref="/data/group_note">
      <label>Turning Notifications ON</label>
      <input ref="/data/group_note/pregnancy_note">
        <label> An SMS will automatically be sent to <output value=" /data/chw_name "/> (<output value=" /data/chw_phone "/>) to inform them that reminders are turned ON for <output value=" /data/patient_name "/> </label>
      </input>
      <select1 ref="/data/group_note/send_note">
        <label>Write additional info to send to the CHW?</label>
        <itemset nodeset="instance('select_yes_no')/root/item">
          <value ref="name"/>
          <label ref="label"/>
        </itemset>
      </select1>
      <input ref="/data/group_note/chw_note" appearance="multiline">
        <label>Enter short message to be sent</label>
      </input>
    </group>
  </h:body>
</h:html>
